# =============================================================================
# Application Settings
# =============================================================================
APP_NAME="Recruit-Rag"
APP_VERSION="0.4"

# =============================================================================
# File Upload Settings
# =============================================================================
FILE_MAX_SIZE_MB=10
FILE_ALLOWED_TYPES=["application/vnd.openxmlformats-officedocument.wordprocessingml.document","text/plain","application/pdf"]
UPLOAD_DIRECTORY="assets/files"
VECTOR_DB_DISTANCE="cosine"
VECTOR_DB_COLLECTION_NAME="recruit_rag_vectors"
FILE_CHUNK_SIZE=512000        # 0.5 MB
FILE_DEFAULT_CHUNK_SIZE=1048576  # 1 MB
FILE_BYTES_TO_MB=1048576      # 1024 * 1024

# =============================================================================
# Database Settings (MongoDB)
# =============================================================================
MONGO_DB="mongodb://localhost:27017"
DB_NAME="recruit-rag"

# --- Collection Names ---
PROJECTS_COLLECTION="PROJECTS_COLLECTION"
CHUNKS_COLLECTION="CHUNKS_COLLECTION"
ASSETS_COLLECTION="ASSETS_COLLECTION"
RESUMES_COLLECTION="RESUMES_COLLECTION"
JOB_DESCRIPTIONS_COLLECTION="JOB_DESCRIPTIONS_COLLECTION"

# =============================================================================
# LLM Configuration
# =============================================================================
GENERATION_BACKEND="GEMINI-FLASH"
EMBEDDING_BACKEND="GROQ"

GENERATION_MODEL_ID="llama-3.3-70b-versatile"
EMBEDDING_MODEL_ID="gemini-embedding-001"
EMBEDDING_MODEL_SIZE=768

# Max parallel LLM API calls. Use 50 for fast processing, 4 for debugging.
LLM_CONCURRENCY_LIMIT=50

# =============================================================================
# API Keys
# =============================================================================
GROQ_API_KEY=""
GEMINI_API_KEY=""
